<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" onKeyPressed="#onKeyPressed" prefHeight="560.0" prefWidth="900.0"
            style="-fx-background-color: #F5F7FB;" xmlns="http://javafx.com/javafx/25"
            fx:controller="com.thevelopers.controller.common.login.RegisterController">

  <center>
    <VBox alignment="CENTER" fillWidth="true" spacing="24.0">
      <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
      </padding>

      <!-- LOGO -->
      <HBox alignment="CENTER" spacing="10.0">
        <ImageView fitHeight="54.0" fitWidth="66.0" preserveRatio="true" smooth="true">
          <image>
            <Image url="@../images/medical_icon.png"/>
          </image>
        </ImageView>

        <Label text="Medical" textFill="#1976D2">
          <font>
            <Font name="JetBrains Mono Bold" size="30.0"/>
          </font>
        </Label>
      </HBox>

      <!-- CARD -->
      <VBox alignment="TOP_LEFT" fillWidth="true" maxWidth="560.0" prefWidth="560.0" spacing="14.0"
            style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 20, 0, 0, 6);">
        <padding>
          <Insets bottom="24.0" left="28.0" right="28.0" top="28.0"/>
        </padding>

        <!-- Cabeçalho -->
        <VBox alignment="CENTER" fillWidth="true" spacing="6.0">
          <Label text="Criar conta" textFill="#1F2937">
            <font>
              <Font name="JetBrains Mono Bold" size="22.0"/>
            </font>
          </Label>

          <Label text="Preencha os dados abaixo" textFill="#6B7280">
            <font>
              <Font name="JetBrains Mono" size="13.0"/>
            </font>
          </Label>
        </VBox>

        <Region prefHeight="10.0"/>

        <!-- Campos -->
        <GridPane hgap="16.0" maxWidth="1.7976931348623157E308" vgap="10.0">
          <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0"/>
          </columnConstraints>

          <Label text="Nome" textFill="#111827" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <font>
              <Font name="JetBrains Mono Regular" size="13.0"/>
            </font>
          </Label>

          <Label text="Senha" textFill="#111827" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <font>
              <Font name="JetBrains Mono" size="13.0"/>
            </font>
          </Label>

          <TextField fx:id="nameField" maxWidth="1.7976931348623157E308" prefHeight="42.0" promptText="Seu nome"
                     style="-fx-font-family: 'JetBrains Mono'; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #D1D5DB; -fx-padding: 0 12 0 12;"
                     GridPane.columnIndex="0" GridPane.rowIndex="1"/>

          <PasswordField fx:id="passwordField" maxWidth="1.7976931348623157E308" prefHeight="42.0" promptText="Senha"
                         style="-fx-font-family: 'JetBrains Mono'; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #D1D5DB; -fx-padding: 0 12 0 12;"
                         GridPane.columnIndex="1" GridPane.rowIndex="1"/>

          <Label text="Login" textFill="#111827" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <font>
              <Font name="JetBrains Mono" size="13.0"/>
            </font>
          </Label>

          <Label text="Especialidade" textFill="#111827" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <font>
              <Font name="JetBrains Mono" size="13.0"/>
            </font>
          </Label>

          <TextField fx:id="loginField" maxWidth="1.7976931348623157E308" prefHeight="42.0" promptText="Usuário"
                     style="-fx-font-family: 'JetBrains Mono'; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #D1D5DB; -fx-padding: 0 12 0 12;"
                     GridPane.columnIndex="0" GridPane.rowIndex="3"/>

          <TextField fx:id="specialityField" maxWidth="1.7976931348623157E308" prefHeight="42.0"
                     promptText="Ex: Cardiologista"
                     style="-fx-font-family: 'JetBrains Mono'; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #D1D5DB; -fx-padding: 0 12 0 12;"
                     GridPane.columnIndex="1" GridPane.rowIndex="3"/>
          <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
          </rowConstraints>
        </GridPane>

        <Region prefHeight="6.0"/>

        <!-- Tipo de usuário (100% compatível) -->
        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="12.0">
          <Label contentDisplay="CENTER" text="Tipo de usuário" textFill="#111827">
            <font>
              <Font name="JetBrains Mono" size="13.0"/>
            </font>
          </Label>

          <RadioButton fx:id="rbPaciente" selected="true"
                       style="-fx-font-family: Jetbrains; -fx-font-size: 13px; -fx-text-fill: #111827;"
                       stylesheets="@../styles/Register.css" text="Paciente" toggleGroup="$typeGroup">
            <font>
              <Font name="JetBrains Mono" size="13.0"/>
            </font>
            <toggleGroup>
              <ToggleGroup fx:id="typeGroup"/>
            </toggleGroup>
          </RadioButton>

          <RadioButton fx:id="rbMedico"
                       style="-fx-font-family: Jetbrains Mono; -fx-font-size: 13px; -fx-text-fill: #111827;"
                       stylesheets="@../styles/Register.css" text="Médico" toggleGroup="$typeGroup">
            <font>
              <Font name="JetBrains Mono" size="13.0"/>
            </font>
            <toggleGroup>
              <fx:reference source="typeGroup"/>
            </toggleGroup>
          </RadioButton>
        </HBox>

        <Region prefHeight="10.0"/>

        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="12.0">
          <Button mnemonicParsing="false" onAction="#onAction" prefHeight="44.0" prefWidth="220.0"
                  style="-fx-font-family: 'JetBrains Mono'; -fx-cursor: hand; -fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"
                  text="Cadastrar"/>
        </HBox>

        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308">
          <Hyperlink onAction="#onAction"
                     style="-fx-font-family: 'JetBrains Mono'; -fx-text-fill: #1976D2; -fx-cursor: hand;"
                     text="Já tem conta? Entrar"/>
        </HBox>

      </VBox>
    </VBox>
  </center>

</BorderPane>
