<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21"
            prefHeight="560.0" prefWidth="900.0"
            stylesheets="@../styles/PatientAppointment.css"
            style="-fx-background-color: #F5F7FB;"
            fx:controller="com.thevelopers.controller.patient.PatientAppointmentController">

  <center>
    <StackPane alignment="CENTER">
      <VBox alignment="CENTER" spacing="18.0" maxWidth="640.0">
        <padding>
          <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
        </padding>

        <HBox alignment="CENTER" spacing="10.0"
              style="-fx-background-color: rgba(25,118,210,0.06); -fx-background-radius: 12;">
          <padding>
            <Insets top="10.0" right="14.0" bottom="10.0" left="14.0"/>
          </padding>

          <ImageView fitHeight="42.0" fitWidth="52.0" preserveRatio="true" smooth="true">
            <image>
              <Image url="@../images/medical_icon.png"/>
            </image>
          </ImageView>

          <Label text="Medical" styleClass="brand-text">
            <font>
              <Font name="JetBrains Mono Bold" size="26.0"/>
            </font>
          </Label>
        </HBox>

        <VBox alignment="TOP_CENTER" spacing="14.0" maxWidth="560.0" styleClass="card">
          <padding>
            <Insets top="22.0" right="26.0" bottom="24.0" left="26.0"/>
          </padding>

          <VBox alignment="CENTER" spacing="6.0">
            <Label text="Agendar consulta" styleClass="title"/>
            <Label text="Informe a data, hora e selecione um médico." styleClass="subtitle"/>
          </VBox>

          <Region prefHeight="6.0"/>

          <HBox spacing="10.0" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308">

            <VBox spacing="6.0" HBox.hgrow="ALWAYS">
              <Label text="Data" styleClass="field-label"/>
              <DatePicker fx:id="datePicker"
                          promptText="Selecione o dia"
                          prefHeight="42.0"
                          maxWidth="1.7976931348623157E308"
                          styleClass="input"/>
            </VBox>

            <VBox spacing="6.0" prefWidth="120.0">
              <Label text="Hora" styleClass="field-label"/>
              <TextField fx:id="timeField"
                         promptText="14:30"
                         prefHeight="42.0"
                         styleClass="input"/>
            </VBox>
          </HBox>

          <Region prefHeight="6.0"/>

          <VBox spacing="6.0" maxWidth="1.7976931348623157E308">
            <Label text="Selecione o médico" styleClass="field-label"/>
            <ComboBox fx:id="doctorsComboBox"
                      promptText="Selecione..."
                      prefHeight="42.0"
                      maxWidth="1.7976931348623157E308"
                      styleClass="input"/>
          </VBox>

          <Region prefHeight="14.0"/>

          <HBox alignment="CENTER" spacing="14.0">
            <Button text="Voltar"
                    mnemonicParsing="false"
                    onAction="#onAction"
                    prefHeight="40.0"
                    prefWidth="160.0"
                    styleClass="btn-secondary"/>

            <Button text="Agendar"
                    mnemonicParsing="false"
                    onAction="#onAction"
                    prefHeight="40.0"
                    prefWidth="160.0"
                    styleClass="btn-primary"/>
          </HBox>
        </VBox>
      </VBox>
    </StackPane>
  </center>

</BorderPane>